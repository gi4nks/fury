// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model Bookmark {
  id           String    @id @default(cuid())
  url          String    @unique
  title        String
  description  String?
  sourceFolder String?
  // Enhanced metadata fields
  metaTitle    String?
  metaDescription String?
  ogTitle      String?
  ogDescription String?
  ogImage      String?
  keywords     String?
  summary      String?
  aiCategory   String?
  aiConfidence Float?    // AI categorization confidence score (0-100)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  categoryId   String?
  category     Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  description String?
  keywords    String?    // JSON array of custom keywords for matching
  parentId    String?    // For hierarchical categories
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  createdAt   DateTime   @default(now())
  bookmarks   Bookmark[]
}

model ImportSession {
  id                 String   @id @default(cuid())
  createdAt          DateTime @default(now())
  fileName           String?
  totalBookmarks     Int
  successfulBookmarks Int
  failedBookmarks    Int
  skippedBookmarks   Int      @default(0)
}

// Custom category templates for user-defined hierarchies
model CategoryTemplate {
  id          String   @id @default(cuid())
  name        String
  slug        String
  description String?
  keywords    String   // JSON array of keywords
  urlPatterns String?  // JSON array of URL patterns
  parentId    String?
  parent      CategoryTemplate?  @relation("TemplateHierarchy", fields: [parentId], references: [id])
  children    CategoryTemplate[] @relation("TemplateHierarchy")
  level       Int      @default(0)
  isCustom    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  templateSetId String?
  templateSet   CategoryTemplateSet? @relation(fields: [templateSetId], references: [id], onDelete: Cascade)
}

// Group of category templates (saveable configurations)
model CategoryTemplateSet {
  id          String   @id @default(cuid())
  name        String
  description String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categories  CategoryTemplate[]
}
